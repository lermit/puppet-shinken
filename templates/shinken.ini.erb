[paths]
# set the paths according to your setup. defaults follow
# the linux standard base
etc = <%= scope.lookupvar('shinken::config_dir') %>
lib = /var/lib/shinken
share = %(lib)s/share
cli = %(lib)s/cli
packs = %(etc)s/packs
modules = %(lib)s/modules
doc = %(lib)s/doc
inventory = %(lib)s/inventory
libexec = %(lib)s/libexec

[shinken.io]
# options for connection to the shinken.io website.
# proxy: curl style, should look as http://user:password@server:3128
# api_key: useful for publishing packages or earn xp after each install. create an account at http://shinken.io and go to http://shinken.io/~

proxy = <%= scope.lookupvar('shinken::proxy') %>
api_key = <%= scope.lookupvar('shinken::api_key') %>
